                                        <Button x:Name="TagTypeBlueButton" Grid.Column="5" Width="42" Foreground="White">
                                            <ToolTipService.ToolTip>
                                                <ToolTip x:Name="TagTypeBlueToolTip" Style="{StaticResource AppToolTipStyle}">
                                                    Blue
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
