                                                <FontIcon Glyph="&#xE91F;" FontSize="25" FontFamily="Segoe MDL2 Assets" />
                                                <Ellipse Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Ellipse.Fill>
                                                        <SolidColorBrush Color="SkyBlue" />
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                            </Grid>
                                        </Button>
                                        <Button x:Name="TagTypePurpleButton" Grid.Column="6" Width="42" Foreground="White">
                                            <ToolTipService.ToolTip>
                                                <ToolTip x:Name="TagTypePurpleToolTip" Style="{StaticResource AppToolTipStyle}">
                                                    Purple
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                            <Grid>
                                                <FontIcon Glyph="&#xE91F;" FontSize="25" FontFamily="Segoe MDL2 Assets" />
                                                <Ellipse Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Ellipse.Fill>
                                                        <SolidColorBrush Color="Plum" />
                                                    </Ellipse.Fill>
                                                </Ellipse>
