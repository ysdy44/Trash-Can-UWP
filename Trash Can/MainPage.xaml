                        </ToolTip>
                    </ToolTipService.ToolTip>
                    <SymbolIcon Symbol="GlobalNavigationButton" />
                </Button>
                <Grid x:Name="HeadGrid" Grid.Row="1" RequestedTheme="Dark" Visibility="Collapsed" >
