<Page
    x:Class="Trash_Can.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Trash_Can"
    xmlns:controls="using:Trash_Can.Controls"
    xmlns:elements="using:Trash_Can.Elements"
    xmlns:trashs="using:Trash_Can.Trashs"
    mc:Ignorable="d"
    NavigationCacheMode="Required"    
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    >


    <FrameworkElement.Resources>

        <!--Flyout-->
        <MenuFlyout x:Name="TitleFlyout" Placement="Bottom">
            <MenuFlyoutItem x:Name="SaveItem">
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="S"/>
                </MenuFlyoutItem.KeyboardAccelerators>
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Save" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Save
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="CloseItem">
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Key="Escape"/>
                </MenuFlyoutItem.KeyboardAccelerators>
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Cancel" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Close
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="DateItem">
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="T"/>
                </MenuFlyoutItem.KeyboardAccelerators>
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Calendar" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Date
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="FindItem">
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="F"/>
                </MenuFlyoutItem.KeyboardAccelerators>
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Find" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Find
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="LocalFolderItem" IsEnabled="{x:Bind StringToBooleanConverter(SubtitleTextBlock.Text),Mode=OneWay}">
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="L"/>
                </MenuFlyoutItem.KeyboardAccelerators>
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="NewWindow" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Local folder
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="RenameItem" IsEnabled="{x:Bind StringToBooleanConverter(SubtitleTextBlock.Text),Mode=OneWay}">
                <MenuFlyoutItem.KeyboardAccelerators>
                    <KeyboardAccelerator Modifiers="Control" Key="E"/>
                </MenuFlyoutItem.KeyboardAccelerators>
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Edit" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Rename
            </MenuFlyoutItem>
        </MenuFlyout>
        <MenuFlyout x:Name="SelectAllFlyout" >
            <MenuFlyoutItem x:Name="SelectAllItem" >
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="SelectAll" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Select All
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="DeselectItem" >
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Cancel" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Deselect
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="SelectToStartItem" >
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Upload" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Select To Start
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="SelectToEndItem" >
                <MenuFlyoutItem.Icon>
                    <SymbolIcon Symbol="Download" Foreground="{StaticResource AppBlueLinearGradientBrush}"/>
                </MenuFlyoutItem.Icon>
                Select To End
            </MenuFlyoutItem>
        </MenuFlyout>
        <MenuFlyout x:Name="WeightFlyout" >
            <MenuFlyoutItem x:Name="WeightBlackItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\Black.png"/>
                </MenuFlyoutItem.Icon>
                Black
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="WeightBoldItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\Bold.png"/>
                </MenuFlyoutItem.Icon>
                Bold
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="WeightExtraBlackItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\ExtraBlack.png"/>
                </MenuFlyoutItem.Icon>
                ExtraBlack
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="WeightExtraBoldItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\ExtraBold.png"/>
                </MenuFlyoutItem.Icon>
                ExtraBold
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="WeightExtraLightItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\ExtraLight.png"/>
                </MenuFlyoutItem.Icon>
                ExtraLight
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="WeightLightItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\Light.png"/>
                </MenuFlyoutItem.Icon>
                Light
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="WeightMediumItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\Medium.png"/>
                </MenuFlyoutItem.Icon>
                Medium
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="WeightNormalItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\Normal.png"/>
                </MenuFlyoutItem.Icon>
                Normal
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="WeightSemiBoldItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\SemiBold.png"/>
                </MenuFlyoutItem.Icon>
                SemiBold
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="WeightSemiLightItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\SemiLight.png"/>
                </MenuFlyoutItem.Icon>
                SemiLight
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="WeightThinItem" >
                <MenuFlyoutItem.Icon>
                    <BitmapIcon ShowAsMonochrome="False" UriSource="ms-appx:///Icons\FontWeight\Thin.png"/>
                </MenuFlyoutItem.Icon>
                Thin
            </MenuFlyoutItem>
        </MenuFlyout>
        <MenuFlyout x:Name="UnderlineFlyout" >
            <MenuFlyoutItem x:Name="UnderlineNoneItem" >
                None
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineWordsItem" >
                Words
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="UnderlineSingleItem" >
                Single
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineDoubleItem" >
                Double
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="UnderlineDashItem" >
                Dash
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineDashDotItem" >
                DashDot
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineDashDotDotItem" >
                DashDotDot
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineDottedItem" >
                Dotted
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineLongDashItem" >
                LongDash
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="UnderlineThinItem" >
                Thin
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="UnderlineThickItem" >
                Thick
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineThickDashItem" >
                ThickDash
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineThickDashDotItem" >
                ThickDashDot
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineThickDashDotDotItem" >
                ThickDashDotDot
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineThickDottedItem" >
                ThickDotted
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineThickLongDashItem" >
                ThickLongDash
            </MenuFlyoutItem>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem x:Name="UnderlineWaveItem" >
                Wave
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineDoubleWaveItem" >
                DoubleWave
            </MenuFlyoutItem>
            <MenuFlyoutItem x:Name="UnderlineHeavyWaveItem" >
                HeavyWave
            </MenuFlyoutItem>
        </MenuFlyout>

    </FrameworkElement.Resources>


    <Grid>

        <!--VisualState-->
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>

                <!--Phone-->
                <VisualState x:Name="Phone">
                    <VisualState.Setters>
                        <!--Page-->
                        <Setter Target="FootPanel.IsShow" Value="False"/>

                        <!--SplitView-->
                        <Setter Target="SplitView.DisplayMode" Value="Overlay"/>
                        <Setter Target="SplitView.IsPaneOpen" Value="False"/>
                        <Setter Target="PaneListView.Background" Value="{ThemeResource SystemControlAccentAcrylicElementAccentMediumHighBrush}"/>
                        <Setter Target="PhoneSplitButton.Visibility" Value="Visible"/>

                        <!--Writable-->
                        <Setter Target="FootStackPanel.Orientation" Value="Vertical"/>
                        <Setter Target="FootStackPanel01.Orientation" Value="Vertical"/>
                        <Setter Target="FootStackPanel02.Orientation" Value="Vertical"/>

                        <Setter Target="FootScrollViewer.Style" Value="{StaticResource AppNoneScrollViewerStyle}"/>
                        <Setter Target="FootPanel.VerticalAlignment" Value="Bottom"/>
                        <Setter Target="FootBorder.Margin" Value="0"/>
                        <Setter Target="FootBorder.CornerRadius" Value="0"/>
                        <Setter Target="FootBorder.BorderThickness" Value="0,1,0,0"/>

                        <Setter Target="BodyBorder.Margin" Value="0"/>
                        <Setter Target="FindBorder.Margin" Value="0"/>
                        <Setter Target="FindBorder.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="SubtitleTextBlock.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>

                <!--Pad-->
                <VisualState x:Name="Pad">
                    <VisualState.Setters>
                        <!--Page-->
                        <Setter Target="FootPanel.IsShow" Value="False"/>

                        <!--SplitView-->
                        <Setter Target="SplitView.DisplayMode" Value="CompactOverlay"/>
                        <Setter Target="SplitView.IsPaneOpen" Value="False"/>
                        <Setter Target="PaneListView.Background" Value="{ThemeResource SystemControlAccentAcrylicElementAccentMediumHighBrush}"/>

                        <!--Writable-->
                        <Setter Target="FootStackPanel.Orientation" Value="Vertical"/>

                        <Setter Target="FootPanel.VerticalAlignment" Value="Bottom"/>
                        <Setter Target="FootBorder.Margin" Value="0"/>
                        <Setter Target="FootBorder.CornerRadius" Value="8,8,0,0"/>
                        <Setter Target="FootBorder.HorizontalAlignment" Value="Center"/>
                        <Setter Target="FootBorder.BorderThickness" Value="1,1,1,0"/>

                        <Setter Target="BodyBorder.Margin" Value="0"/>
                        <Setter Target="FindBorder.Margin" Value="0,4,4,0"/>
                    </VisualState.Setters>
                </VisualState>

                <!--PC-->
                <VisualState x:Name="PC">
                    <VisualState.Setters>
                        <!--Page-->
                        <Setter Target="FootPanel.IsShow" Value="False"/>

                        <!--SplitView-->
                        <Setter Target="SplitView.IsPaneOpen" Value="True"/>
                    </VisualState.Setters>
                </VisualState>


                <!--Phone-->
                <VisualState x:Name="WritablePhone">
                    <VisualState.Setters>
                        <!--Page-->
                        <Setter Target="FlipView.Visibility" Value="Collapsed"/>
                        <Setter Target="ListView.Visibility" Value="Collapsed"/>

                        <Setter Target="BodyBorder.Visibility" Value="Visible"/>
                        <Setter Target="FootPanel.IsShow" Value="True"/>

                        <Setter Target="PinButton.Visibility" Value="Visible"/>

                        <!--SplitView-->
                        <Setter Target="SplitView.DisplayMode" Value="Overlay"/>
                        <Setter Target="SplitView.IsPaneOpen" Value="False"/>
                        <Setter Target="PaneListView.Background" Value="{ThemeResource SystemControlAccentAcrylicElementAccentMediumHighBrush}"/>
                        <Setter Target="HeadGrid.Visibility" Value="Visible"/>

                        <!--Writable-->
                        <Setter Target="FootStackPanel.Orientation" Value="Vertical"/>
                        <Setter Target="FootStackPanel01.Orientation" Value="Vertical"/>
                        <Setter Target="FootStackPanel02.Orientation" Value="Vertical"/>

                        <Setter Target="FootScrollViewer.Style" Value="{StaticResource AppNoneScrollViewerStyle}"/>
                        <Setter Target="FootPanel.VerticalAlignment" Value="Bottom"/>
                        <Setter Target="FootBorder.Margin" Value="0"/>
                        <Setter Target="FootBorder.CornerRadius" Value="0"/>
                        <Setter Target="FootBorder.BorderThickness" Value="0,1,0,0"/>

                        <Setter Target="BodyBorder.Margin" Value="0"/>
                        <Setter Target="FindBorder.Margin" Value="0"/>
                        <Setter Target="FindBorder.HorizontalAlignment" Value="Stretch"/>
                        <Setter Target="SubtitleTextBlock.Visibility" Value="Collapsed"/>
                    </VisualState.Setters>
                </VisualState>

                <!--Pad-->
                <VisualState x:Name="WritablePad">
                    <VisualState.Setters>
                        <!--Page-->
                        <Setter Target="FlipView.Visibility" Value="Collapsed"/>
                        <Setter Target="ListView.Visibility" Value="Collapsed"/>

                        <Setter Target="BodyBorder.Visibility" Value="Visible"/>
                        <Setter Target="FootPanel.IsShow" Value="True"/>

                        <Setter Target="PinButton.Visibility" Value="Visible"/>

                        <!--SplitView-->
                        <Setter Target="SplitView.DisplayMode" Value="CompactOverlay"/>
                        <Setter Target="SplitView.IsPaneOpen" Value="False"/>
                        <Setter Target="PaneListView.Background" Value="{ThemeResource SystemControlAccentAcrylicElementAccentMediumHighBrush}"/>
                        <Setter Target="HeadGrid.Visibility" Value="Visible"/>

                        <!--Writable-->
                        <Setter Target="FootStackPanel.Orientation" Value="Vertical"/>

                        <Setter Target="FootPanel.VerticalAlignment" Value="Bottom"/>
                        <Setter Target="FootBorder.Margin" Value="0"/>
                        <Setter Target="FootBorder.CornerRadius" Value="8,8,0,0"/>
                        <Setter Target="FootBorder.HorizontalAlignment" Value="Center"/>
                        <Setter Target="FootBorder.BorderThickness" Value="1,1,1,0"/>

                        <Setter Target="BodyBorder.Margin" Value="0"/>
                        <Setter Target="FindBorder.Margin" Value="0,4,4,0"/>
                    </VisualState.Setters>
                </VisualState>

                <!--PC-->
                <VisualState x:Name="WritablePC">
                    <VisualState.Setters>
                        <!--Page-->
                        <Setter Target="FlipView.Visibility" Value="Collapsed"/>
                        <Setter Target="ListView.Visibility" Value="Collapsed"/>

                        <Setter Target="BodyBorder.Visibility" Value="Visible"/>
                        <Setter Target="FootPanel.IsShow" Value="True"/>

                        <Setter Target="FullScreenButton.Visibility" Value="Visible"/>

                        <!--SplitView-->
                        <Setter Target="SplitView.IsPaneOpen" Value="True"/>
                        <Setter Target="HeadGrid.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>


                <!--Pad-->
                <VisualState x:Name="FullScreenPad">
                    <VisualState.Setters>
                        <!--Page-->
                        <Setter Target="FlipView.Visibility" Value="Collapsed"/>
                        <Setter Target="ListView.Visibility" Value="Collapsed"/>

                        <Setter Target="BodyBorder.Visibility" Value="Visible"/>
                        <Setter Target="FootPanel.IsShow" Value="True"/>

                        <Setter Target="UnFullScreenButton.Visibility" Value="Visible"/>

                        <!--SplitView-->
                        <Setter Target="SplitView.IsPaneOpen" Value="False"/>
                        <Setter Target="HeadGrid.Visibility" Value="Visible"/>

                        <!--Writable-->
                        <Setter Target="FootStackPanel.Orientation" Value="Vertical"/>

                        <Setter Target="FootPanel.VerticalAlignment" Value="Bottom"/>
                        <Setter Target="FootBorder.Margin" Value="0"/>
                        <Setter Target="FootBorder.CornerRadius" Value="8,8,0,0"/>
                        <Setter Target="FootBorder.HorizontalAlignment" Value="Center"/>
                        <Setter Target="FootBorder.BorderThickness" Value="1,1,1,0"/>

                        <Setter Target="BodyBorder.Margin" Value="0"/>
                        <Setter Target="FindBorder.Margin" Value="0,4,4,0"/>
                    </VisualState.Setters>
                </VisualState>

                <!--PC-->
                <VisualState x:Name="FullScreenPC">
                    <VisualState.Setters>
                        <!--Page-->
                        <Setter Target="FlipView.Visibility" Value="Collapsed"/>
                        <Setter Target="ListView.Visibility" Value="Collapsed"/>

                        <Setter Target="BodyBorder.Visibility" Value="Visible"/>
                        <Setter Target="FootPanel.IsShow" Value="True"/>

                        <Setter Target="UnFullScreenButton.Visibility" Value="Visible"/>

                        <!--SplitView-->
                        <Setter Target="SplitView.IsPaneOpen" Value="False"/>
                        <Setter Target="HeadGrid.Visibility" Value="Visible"/>
                    </VisualState.Setters>
                </VisualState>

            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <SplitView x:Name="SplitView" IsPaneOpen="True" DisplayMode="Inline" OpenPaneLength="240" PaneBackground="{x:Null}">


            <SplitView.Pane>
                <ListView x:Name="PaneListView" SelectionMode="None" IsItemClickEnabled="True"
                      RequestedTheme="Dark" Background="{ThemeResource SystemControlAccentAcrylicWindowAccentMediumHighBrush}">

                    <ListView.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="PCAppTitleTextBlock" Grid.ColumnSpan="2" Margin="12,0" FontSize="12" VerticalAlignment="Center"
                                   Visibility="{x:Bind BooleanToVisibilityConverter(SplitView.IsPaneOpen), Mode=OneWay}"/>
                            <Button x:Name="PCSplitButton" Grid.Row="1" Foreground="White" >
                                <ToolTipService.ToolTip>
                                    <ToolTip x:Name="PCSplitToolTip" Style="{StaticResource AppToolTipStyle}">
                                        Split
                                    </ToolTip>
                                </ToolTipService.ToolTip>
                                <SymbolIcon Symbol="GlobalNavigationButton" />
                            </Button>
                        </Grid>
                    </ListView.Header>

                    <ListView.Footer>
                        <ListViewItem x:Name="SettingItem" Height="60">
                            <StackPanel Orientation="Horizontal">
                                <Border Width="26" Height="26">
                                    <SymbolIcon Symbol="Setting"/>
                                </Border>
                                <TextBlock x:Name="SettingTextBlock" Margin="12,2" VerticalAlignment="Center">
                                    Setting
                                </TextBlock>
                            </StackPanel>
                        </ListViewItem>
                    </ListView.Footer>

                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <FrameworkElement.Tag>
                                <x:Int32>0</x:Int32>
                            </FrameworkElement.Tag>
                            <Border Width="26" Height="26">
                                <SymbolIcon Symbol="Add"/>
                            </Border>
                            <TextBlock x:Name="NewTextBlock" Margin="12,2" VerticalAlignment="Center">
                                New
                            </TextBlock>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <FrameworkElement.Tag>
                                <x:Int32>1</x:Int32>
                            </FrameworkElement.Tag>
                            <Border Width="26" Height="26">
                                <SymbolIcon Symbol="Home"/>
                            </Border>
                            <TextBlock x:Name="HomeTextBlock" Margin="12,2" VerticalAlignment="Center">
                                Home
                            </TextBlock>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem Height="60">
                        <StackPanel Orientation="Horizontal">
                            <FrameworkElement.Tag>
                                <x:Int32>2</x:Int32>
                            </FrameworkElement.Tag>
                            <Border Width="26" Height="26">
                                <SymbolIcon Symbol="Important"/>
                            </Border>
                            <TextBlock x:Name="AboutTextBlock" Margin="12,2" VerticalAlignment="Center">
                                About...
                            </TextBlock>
                        </StackPanel>
                    </ListViewItem>

                </ListView>
            </SplitView.Pane>


            <Grid>
                <Panel.Background>
                    <!--Brush-->
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0" Color="{ThemeResource SystemAccentColorLight3}"/>
                        <GradientStop Offset="0.1428571428571429" Color="{ThemeResource SystemAccentColorLight3}"/>

                        <GradientStop Offset="0.1428571428571429" Color="{ThemeResource SystemAccentColorLight2}"/>
                        <GradientStop Offset="0.2857142857142857" Color="{ThemeResource SystemAccentColorLight2}"/>

                        <GradientStop Offset="0.2857142857142857" Color="{ThemeResource SystemAccentColorLight1}"/>
                        <GradientStop Offset="0.4285714285714287" Color="{ThemeResource SystemAccentColorLight1}"/>

                        <GradientStop Offset="0.4285714285714287" Color="{ThemeResource SystemAccentColor}"/>
                        <GradientStop Offset="0.5714285714285713" Color="{ThemeResource SystemAccentColor}"/>

                        <GradientStop Offset="0.5714285714285713" Color="{ThemeResource SystemAccentColorDark1}"/>
                        <GradientStop Offset="0.710" Color="{ThemeResource SystemAccentColorDark1}"/>

                        <GradientStop Offset="0.7142857142857143" Color="{ThemeResource SystemAccentColorDark2}"/>
                        <GradientStop Offset="0.8571428571428571" Color="{ThemeResource SystemAccentColorDark2}"/>

                        <GradientStop Offset="0.8571428571428571" Color="{ThemeResource SystemAccentColorDark3}"/>
                        <GradientStop Offset="1" Color="{ThemeResource SystemAccentColorDark3}"/>
                    </LinearGradientBrush>
                </Panel.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Extension-->
                <elements:ApplicationTitleBarExtension x:Name="ApplicationView" TitleBarColor="Transparent"/>


                <TextBlock x:Name="PadAppTitleTextBlock"  Margin="12,0" FontSize="12" VerticalAlignment="Center"
                           Visibility="{x:Bind ReverseBooleanToVisibilityConverter(SplitView.IsPaneOpen), Mode=OneWay}"/>


                <!--FlipView-->
                <FlipView x:Name="FlipView"
                      Grid.Row="1" 
                      Grid.RowSpan="2" 
                      Margin="0,0,0,200"
                      RequestedTheme="Dark"
                      ItemsSource="{x:Bind Items}" 
                      >
                    <ItemsControl.ItemTemplate>
                        <!--DataTemplate-->
                        <DataTemplate x:DataType="trashs:TrashItem">
                            <controls:TrashControl Model="{x:Bind}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </FlipView>


                <!--ListView-->
                <ListView x:Name="ListView"
                    Grid.Row="2"
                    Height="200" VerticalAlignment="Bottom"
                    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                    SelectionMode="Single" IsItemClickEnabled="False"
                    SelectedIndex="{x:Bind FlipView.SelectedIndex, Mode=TwoWay}"
                    ItemsSource="{x:Bind Items}"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    ScrollViewer.HorizontalScrollMode="Enabled"
                    ScrollViewer.IsHorizontalRailEnabled="False"
                    ScrollViewer.VerticalScrollMode="Disabled"
                    ScrollViewer.IsVerticalRailEnabled="True"
                    ScrollViewer.ZoomMode="Disabled"
                    ScrollViewer.IsDeferredScrollingEnabled="False"
                    ScrollViewer.BringIntoViewOnFocusChange="True"
                    >
                    <ListView.Footer>
                        <StackPanel Margin="10,2" Width="140">
                            <Button x:Name="AddButton" Width="140" Height="140" Background="{ThemeResource AppBackground}" >
                                <FontIcon FontSize="22" Glyph="&#xE109;" FontFamily="Segoe MDL2 Assets"/>
                            </Button>
                        </StackPanel>
                    </ListView.Footer>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="trashs:TrashItem">
                            <StackPanel Width="140">
                                <elements:AccentDecoratorItem IsFavorite="{x:Bind IsFavorite, Mode=OneWay}"/>
                                <TextBlock Margin="4" FontWeight="Bold" TextTrimming="CharacterEllipsis" Text="{x:Bind Title, Mode=OneWay}"/>
                                <TextBlock Margin="4" FontWeight="Normal" TextTrimming="CharacterEllipsis" Text="{x:Bind DateCreated, Mode=OneWay}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ListView>



                <!--Body-->
                <Border x:Name="BodyBorder" Grid.Row="3" Margin="0,64,0,0" Visibility="Collapsed" >
                    <RichEditBox x:Name="RichEditBox"  
                         IsHandwritingViewEnabled="False"
                         BorderThickness="0" 
                         BorderBrush="Transparent" 
                         Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
                </Border>


                <!--Foot-->
                <elements:TransitionPanel x:Name="FootPanel" Grid.Row="3" VerticalAlignment="Top" IsShow="False" >
                    <FrameworkElement.Resources>
                        <!--Style-->
                        <Style TargetType="Rectangle">
                            <Setter Property="MinWidth" Value="1" />
                            <Setter Property="MinHeight" Value="1" />
                            <Setter Property="MaxHeight" Value="30" />
                            <Setter Property="Margin" Value="0" />
                            <Setter Property="Fill" Value="{ThemeResource AppBorderBrush}" />
                        </Style>
                        <Style TargetType="Line">
                            <Setter Property="X1" Value="0" />
                            <Setter Property="Y1" Value="0" />
                            <Setter Property="X2" Value="24" />
