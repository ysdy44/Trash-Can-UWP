                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" MaxWidth="60"/>
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="1*" MaxWidth="60"/>
