                            </ToolTip>
                        </ToolTipService.ToolTip>
                        <SymbolIcon Symbol="{x:Bind ReverseBooleanToPinConverter(FootPanel.IsShow), Mode=OneWay}" />
                    </Button>
                    <Button x:Name="TitleButton" Grid.Column="2" Width="Auto" HorizontalAlignment="Center" Foreground="{ThemeResource AppForeground}">
