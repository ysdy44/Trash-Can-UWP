                                        <ComboBox x:Name="FontSizeComboBox" Grid.Column="2" >
                                            <ToolTipService.ToolTip>
                                                <ToolTip x:Name="FontSizeToolTip" Style="{StaticResource AppToolTipStyle}">
                                                    Font Size
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                        </ComboBox>
                                    </Grid>

                                    <Rectangle/>

                                    <Grid Height="48">
                                        <Panel.ChildrenTransitions>
                                            <TransitionCollection>
                                                <EntranceThemeTransition IsStaggeringEnabled="True"/>
