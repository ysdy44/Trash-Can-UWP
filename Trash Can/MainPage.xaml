                                                <FontIcon Glyph="&#xE91F;" FontSize="25" FontFamily="Segoe MDL2 Assets" />
                                                <Ellipse Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Ellipse.Fill>
                                                        <SolidColorBrush Color="LightCoral" />
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                            </Grid>
                                        </Button>
                                        <Button x:Name="TagTypeOrangeButton" Grid.Column="2" Width="42" Foreground="White">
                                            <ToolTipService.ToolTip>
                                                <ToolTip x:Name="TagTypeOrangeToolTip" Style="{StaticResource AppToolTipStyle}">
                                                    Orange
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                            <Grid>
                                                <FontIcon Glyph="&#xE91F;" FontSize="25" FontFamily="Segoe MDL2 Assets" />
                                                <Ellipse Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <Ellipse.Fill>
                                                        <SolidColorBrush Color="Orange" />
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                            </Grid>
                                        </Button>
                                        <Button x:Name="TagTypeYellowButton" Grid.Column="3" Width="42" Foreground="White">
                                            <ToolTipService.ToolTip>
                                                <ToolTip x:Name="TagTypeYellowToolTip" Style="{StaticResource AppToolTipStyle}">
                                                    Yellow
                                                </ToolTip>
                                            </ToolTipService.ToolTip>
                                            <Grid>
                                                <FontIcon Glyph="&#xE91F;" FontSize="25" FontFamily="Segoe MDL2 Assets" />
                                                <Ellipse Width="22" Height="22" VerticalAlignment="Center" HorizontalAlignment="Center">
